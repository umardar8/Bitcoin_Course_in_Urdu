<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:scrollbars="vertical"
    tools:context=".Lesson13Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/normal"
        android:orientation="vertical">

        <TextView
            style="@style/titleTextStyle"
            android:textAlignment="center"
            android:text="@string/icon13Text"/>

        <ImageView
            style="@style/fragment_image"
            android:src="@drawable/icon13"
            android:contentDescription="@string/icon13Desc"/>

        <TextView
            style="@style/paragraphStyle"
            android:text="@string/lesson13_para1" />

        <TextView
            style="@style/paragraphStyle"
            android:text="@string/lesson13_para2" />

            <com.google.android.gms.ads.AdView
                android:id="@+id/adView1"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_adUnit"
                style="@style/fragment_banner_ad" />

    </LinearLayout>

</ScrollView>