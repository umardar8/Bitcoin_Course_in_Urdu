        <TextView
            style="@style/paragraphStyle"
            android:text="@string/lesson4_para5" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/lesson4_img1"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:contentDescription="@string/lesson4_img1Desc"/>

        <TextView
            style="@style/paragraphStyle"
            android:text="@string/lesson4_para6" />

        <TextView
