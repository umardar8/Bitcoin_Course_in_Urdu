<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".Lesson6aFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/normal"
        android:orientation="vertical">

        <TextView
            style="@style/titleTextStyle"
            android:textAlignment="center"
            android:text="@string/icon6a_title"/>

        <ImageView
            style="@style/fragment_image"
            android:src="@drawable/icon6a"
            android:contentDescription="@string/icon6_desc"/>

        <TextView
            style="@style/paragraphStyle"
            android:text="@string/lesson6a_para1" />

        <TextView
            style="@style/paragraphStyle"
            android:text="@string/lesson6a_para2" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/lesson6a_img1"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:contentDescription="@string/lesson16_img1Desc"/>

        <TextView
            style="@style/paragraphStyle"
            android:text="@string/lesson6a_para3" />

        <TextView
            style="@style/paragraphStyle"
            android:text="@string/lesson6a_para4" />

        <TextView
            style="@style/paragraphStyle"
            android:text="@string/lesson6a_para5" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/lesson6a_img2"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:contentDescription="@string/lesson16_img1Desc"/>

