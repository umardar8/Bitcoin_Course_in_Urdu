<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingVertical="@dimen/small"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.92"
        android:scrollbars="vertical">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon2"
                style="@style/icon_image"
                android:src="@drawable/icon2"
                android:contentDescription="@string/icon2Desc"/>

            <TextView
                style="@style/homeTextStyle"
                android:text="@string/icon2Text" />

            <ImageView
                android:id="@+id/icon3"
                style="@style/icon_image"
                android:src="@drawable/icon3"
                android:contentDescription="@string/icon3Desc" />

            <TextView
                style="@style/homeTextStyle"
                android:text="@string/icon3Text" />

            <ImageView
                android:id="@+id/icon4"
                style="@style/icon_image"
                android:src="@drawable/icon4"
                android:contentDescription="@string/icon4Desc" />

            <TextView
                style="@style/homeTextStyle"
                android:text="@string/icon4Text" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>