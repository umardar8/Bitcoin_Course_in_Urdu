<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:paddingVertical="@dimen/small"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.92"
        android:scrollbars="vertical">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon5"
                style="@style/icon_image"
                android:src="@drawable/icon5"
                android:contentDescription="@string/icon5Desc" />

            <TextView
                style="@style/homeTextStyle"
                android:text="@string/icon5Text" />

            <ImageView
                android:id="@+id/icon16"
                style="@style/icon_image"
                android:src="@drawable/icon16"
                android:contentDescription="@string/icon16Desc" />

            <TextView
                style="@style/homeTextStyle"
                android:text="@string/icon16Text" />

            <ImageView
                android:id="@+id/icon6"
                style="@style/icon_image"
                android:src="@drawable/icon6"
                android:contentDescription="@string/icon6Desc" />

            <TextView
                style="@style/homeTextStyle"
                android:text="@string/icon6Text" />

            <ImageView
                android:id="@+id/icon7"
                style="@style/icon_image"
                android:src="@drawable/icon7"
                android:contentDescription="@string/icon7Desc" />

            <TextView
                style="@style/homeTextStyle"
                android:text="@string/icon7Text" />

            <ImageView
                android:id="@+id/icon8"
                style="@style/icon_image"
                android:src="@drawable/icon8"
                android:contentDescription="@string/icon8Desc" />

            <TextView
                style="@style/homeTextStyle"
                android:text="@string/icon8Text" />

            <ImageView
                android:id="@+id/icon9"
                style="@style/icon_image"
                android:src="@drawable/icon9"
                android:contentDescription="@string/icon9Desc" />

            <TextView
                style="@style/homeTextStyle"
                android:text="@string/icon9Text" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>