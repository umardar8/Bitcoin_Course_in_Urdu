<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="homeTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/urdu</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/urduHeadingSize</item>
    </style>
    <style name="fragmentsTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/normal</item>
        <item name="fontFamily">@font/urdu</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/urduHeadingSize</item>
    </style>
    <style name="titleTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="fontFamily">@font/urdu</item>
        <item name="android:textSize">@dimen/headingSize2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/small</item>
    </style>
    <style name="paragraphStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/urdu</item>
        <item name="android:layout_marginBottom">@dimen/normal</item>
        <item name="android:textSize">@dimen/paragraphSize</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
</resources>